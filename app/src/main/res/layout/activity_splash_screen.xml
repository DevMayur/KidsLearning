<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SplashScreenActivity">


    <ImageView
        android:id="@+id/iv_splash_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/super_kid"/>

    <TextView
        android:id="@+id/tv_splash_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_text"
        android:layout_below="@id/iv_splash_image"
        android:layout_marginTop="24dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slide_view"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_splash_text"
        android:layout_marginTop="24dp"
        android:layout_height="32dp"
        app:bump_vibration="50"
        android:elevation="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        app:inner_color="@color/white"
        app:outer_color="@color/purple_200"
        app:border_radius="12dp"
        app:text="@string/slide_to_start"
        tools:ignore="UnusedAttribute" />

</RelativeLayout>